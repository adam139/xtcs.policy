<?xml version="1.0"?>
<object
    name="portal_controlpanel"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="xtcs.policy">

    <configlet
        title="Wechat settings"
        action_id="xtcs.policy.wechatsettings"
        appId="xtcs.policy"
        category="Products"
        condition_expr=""
        url_expr="string:${portal_url}/@@wechat-controlpanel"
        icon_expr="string:$portal_url/document_icon.png"
        visible="True"
        i18n:attributes="title">
            <permission>Manage portal</permission>
    </configlet>
</object>
